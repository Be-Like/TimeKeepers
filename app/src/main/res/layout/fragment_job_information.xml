<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/job_information_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobManagement.JobInformation">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/job_title"
            android:text="Temp Label Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/job_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp Completion Status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_title" />
        <!--TODO: Create overrides for different versions-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pay_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_rate"
            app:layout_constraintTop_toBottomOf="@id/job_status"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pay_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TempPay/hr"
            app:layout_constraintTop_toTopOf="@id/pay_rate_label"
            app:layout_constraintBottom_toBottomOf="@id/pay_rate_label"
            app:layout_constraintStart_toEndOf="@id/pay_rate_label"
            />
        <!--TODO: get rid of margin and replace/include with style-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            app:layout_constraintTop_toBottomOf="@id/pay_rate_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/address_label"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>